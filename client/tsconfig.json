{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "rootDir": "./src",
        "preserveConstEnums": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": true,
        "target": "es6",
        "esModuleInterop": true,
    },
    "lib": [
        "dom",
        "es6",
        "es7.object"
    ],
    "include": [
        "src/**/*",
        "src/**/*.json"
    ],
    "references": [
        { "path": "../shared" }
    ]
}